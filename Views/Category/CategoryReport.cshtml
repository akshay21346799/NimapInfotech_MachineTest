@model IEnumerable<NimapInfotechMachineTest.Models.CategoryModel>

@{
    Layout = null;
}
<head>
    <script src="~/Content/js/datatables-simple-demo.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/Content/js/scripts.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/simple-datatables@latest" crossorigin="anonymous"></script>
</head>

<table id="datatablesSimple">
    <tr class="bg-danger">
        <th>
            Category Id
        </th>
        <th>
            Category Name
        </th>
        <th>Edit/Delete</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                @Html.ActionLink("Edit", "UpdateCategoryData", new { id = item.CategoryId }) |
                @Html.ActionLink("Delete", "DeleteCategoryData", new { id = item.CategoryId })
            </td>
        </tr>
    }

</table>


