@model NimapInfotechMachineTest.Models.CategoryModel

@using (Html.BeginForm("CategorySaveOrUpdate", "Category", FormMethod.Post))

{
    <div class="row">
        <div class="col-md-3">
            <div class="form-group">
                <label>Category Name</label>
                @Html.HiddenFor(m => m.CategoryId)
                @Html.TextBoxFor(m => m.CategoryName, new { @class = "form-control" })
            </div>
        </div>
    </div>

    <div class="form-group mt-4 mb-0 form-actions">
        <button type="submit" class="btn btn-danger" id="btnsubmit">Save</button>
    </div>
}